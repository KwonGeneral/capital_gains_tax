<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/jua</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="sub_headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="title_medium" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="content" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="content_large" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="content_small" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>